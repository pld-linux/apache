+static char *DefineFetch(pool *p, char *cpVar)
+{
+    char *cpVal;
+
+    /* first try out table */
+    if ((cpVal = (char *)ap_table_get(tDefines, (char *)cpVar)) != NULL)
+        return cpVal;
+    /* second try the environment */
+    if ((cpVal = getenv(cpVar)) != NULL)
+        return cpVal;
+    return NULL;
+}
